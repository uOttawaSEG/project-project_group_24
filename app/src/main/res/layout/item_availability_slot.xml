<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Mon, Nov 10, 2025" android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="14:00 â€“ 14:30" />

    <TextView
        android:id="@+id/txtCourse"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Course: CSI2110" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="end" android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>
