<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Tutor Registration"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- First Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorFirstNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorLastNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tutorPhoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tutorPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Highest Degree -->
        <TextView
            android:text="Highest Degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerDegree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Courses Offered -->
        <TextView
            android:text="Courses Offered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <CheckBox
            android:id="@+id/checkCourse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ITI1121 - Introduction to Computer Science II" />

        <CheckBox
            android:id="@+id/checkCourse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSI2110 - Data Structures and Algorithms" />

        <CheckBox
            android:id="@+id/checkCourse3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELG2138 - Digital Systems" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnTutorRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register as Tutor"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
